{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "es2015",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "types": [
    "node",
    "vite/client",
  ],
  "include": ["./index.ts"],
  "exclude": ["node_modules"]
}
